<%= form_for(@atm) do |f| %>
  <% if @atm.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@atm.errors.count, "error") %> prohibited this atm from being saved:</h2>

      <ul>
      <% @atm.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nama_atm, "Nama ATM" %>
    <%= f.text_field :nama_atm %>
  </div>
  <div class="field">
    <%= f.label :lat, "Latitude" %>
    <%= f.text_field :lat %>
  </div>
  <div class="field">
    <%= f.label :lng, "Longitude" %>
    <%= f.text_field :lng %>
  </div>
  <div class="field">
    <%= f.label :icon, "Marker Icon" %>
    <%= f.text_field :icon %>
  </div>
  <div class="field">
    <%= f.label :picture, "Gambar" %>
    <%= f.text_field :picture %>
  </div>
  <div class="field">
    <%= f.label :bank_id, "Bank" %>
    <%= f.collection_select(:bank_id, Bank.all, :id, :nama_bank, {:prompt => true}) %>
  </div>
  <div class="field">
    <%= f.label :kategori_atm_id, "Kategori ATM" %>
    <%= f.collection_select(:kategori_atm_id, KategoriAtm.all, :id, :nama_kategori, {:prompt => true}) %>
  </div>
  <div class="field">
    <%= f.label :lokasi_atm_id, "Lokasi ATM" %>
    <%= f.collection_select(:lokasi_atm_id, LokasiAtm.all, :id, :nama_lokasi, {:prompt => true}) %>
  </div>
  <div class="field">
    <%= f.label :min_transaksi_id, "Minimal Transaksi" %>
    <%= f.collection_select(:min_transaksi_id, MinTransaksi.all, :id, :nominal, {:prompt => true}) %>
  </div><br />

  <div class="actions">
    <%= f.submit "Simpan", class: "btn btn-primary" %>
    <%= link_to "Kembali", atms_path, class: "btn" %>
  </div>
<% end %>
