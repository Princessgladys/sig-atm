<ul class="breadcrumb">
  <li><%= link_to raw("<i class='fa fa-arrow-circle-left'></i> Admin"), admin_path %> <span class="divider">/</span></li>
  <li class="active">Kategori Lokasi ATM</li>
</ul>

<div class="row-fluid">
  <div class="span3">
    <%= link_to raw("<i class='fa fa-plus-circle'></i> Tambah kategori lokasi atm"), new_lokasi_atm_path, class: "btn btn-primary with-margin-bottom" %>
  </div>
</div>

<div class="row-fluid">
  <div class="span5">
    <table class="table table-striped table-bordered">
      <tr>
        <th>Nama Lokasi</th>
        <th class="text-right">Pilihan</th>
      </tr>

    <% @lokasi_atms.each do |lokasi_atm| %>
      <tr>
        <td><%= lokasi_atm.nama_lokasi %></td>
        <td class="text-right">
          <%= link_to 'Edit', edit_lokasi_atm_path(lokasi_atm), class: "btn btn-primary btn-mini" %>
          <%= link_to 'Delete', lokasi_atm, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-mini" %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
</div>