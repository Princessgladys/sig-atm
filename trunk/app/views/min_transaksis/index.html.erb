<ul class="breadcrumb">
  <li><%= link_to raw("<i class='fa fa-arrow-circle-left'></i> Admin"), admin_path %> <span class="divider">/</span></li>
  <li class="active">Kategori Transaksi ATM</li>
</ul>

<div class="row-fluid">
  <div class="span3">
    <%= link_to raw("<i class='fa fa-plus-circle'></i> Tambah kategori transaksi atm"), new_min_transaksi_path, class: "btn btn-primary with-margin-bottom" %>
  </div>
</div>

<div class="row-fluid">
  <div class="span5">
    <table class="table table-striped table-bordered">
      <tr>
        <th>Nominal (Rp.)</th>
        <th class="text-right">Pilihan</th>
      </tr>

    <% @min_transaksis.each do |min_transaksi| %>
      <tr>
        <td><%= min_transaksi.nominal %></td>
        <td class="text-right">
          <%= link_to 'Edit', edit_min_transaksi_path(min_transaksi), class: "btn btn-primary btn-mini" %>
          <%= link_to 'Delete', min_transaksi, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-mini" %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
</div>