<ul class="breadcrumb">
  <li><%= link_to raw("<i class='fa fa-arrow-circle-left'></i> Admin"), admin_path %> <span class="divider">/</span></li>
  <li class="active">Kategori ATM</li>
</ul>

<div class="row-fluid">
  <div class="span2">
    <%= link_to raw("<i class='fa fa-plus-circle'></i> Tambah kategori"), new_kategori_atm_path, class: "btn btn-primary with-margin-bottom" %>
  </div>
</div>

<div class="row-fluid">
  <div class="span5">
    <table class="table table-striped table-bordered">
      <tr>
        <th>Nama Kategori</th>
        <th class="text-right">Pilihan</th>
      </tr>

    <% @kategori_atms.each do |kategori_atm| %>
      <tr>
        <td><%= kategori_atm.nama_kategori %></td>
        <td class="text-right">
          <%= link_to 'Edit', edit_kategori_atm_path(kategori_atm), class: "btn btn-primary btn-mini" %>
          <%= link_to 'Delete', kategori_atm, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-mini" %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
</div>