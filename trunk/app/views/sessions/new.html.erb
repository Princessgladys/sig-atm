<div class="row-fluid">
  <div id="login_box">
    <%= form_tag sessions_path do %>
      <div class="control-group">
        <div class="controls">
          <h2>Log in</h2>
        </div>
      </div>
      <div class="control-group">
        <%#= label_tag :email, "Email", class: "control-label" %>
        <div class="controls">
          <%= text_field_tag :email, params[:email], placeholder: "Email" %>
        </div>
      </div>
      <div class="control-group">
        <%#= label_tag :password, "Password", class: "control-label" %>
        <div class="controls">
          <%= password_field_tag :password, "", placeholder: "Password" %>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <center>
            <%= submit_tag "Log in", class: "btn btn-primary btn-large" %>
            <h6>New user? Please <%= link_to "Sign up", sign_up_path %></h6>
          </center>
        </div>
      </div>
    <% end %>
  </div>
</div>