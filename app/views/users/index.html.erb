<div class="span10">
  <table class="table table-striped table-bordered">
    <tr>
      <th>Nama Lengkap</th>
      <th>Email</th>
      <th>Alamat</th>
      <th>No Telepon</th>
      <th>Akses Sebagai</th>
      <th>Pilihan</th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.nama_lengkap %></td>
        <td><%= user.email %></td>
        <td><%= user.alamat %></td>
        <td><%= user.no_tlp %></td>
        <td><%= user.user_role.role_name %></td>
        <td>
          <%#= link_to 'View', user %>
          <%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary btn-mini" %>
          <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-mini" %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= link_to '+ Tambah', new_user_path, class: "btn btn-primary" %>
</div>

