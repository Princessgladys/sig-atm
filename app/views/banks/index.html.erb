<div class="span5">
  <table class="table table-striped table-bordered">
    <tr>
      <th>Nama Bank</th>
      <th>Pilihan</th>
    </tr>

  <% @banks.each do |bank| %>
    <tr>
      <td><%= bank.nama_bank %></td>
      <td> 
        <%= link_to 'Edit', edit_bank_path(bank), class: "btn btn-primary btn-mini" %>
        <%= link_to 'Delete', bank, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-mini" %>
      </td>
    </tr>
  <% end %>
  </table>

  <%= link_to '+ Tambah', new_bank_path, class: "btn btn-primary" %>
</div>