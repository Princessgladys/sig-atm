<div class="row-fluid">
  <div class="span12">
    <h2>My Atm</h2>
    <table class="table table-striped table-bordered">
      <tr>
        <th>Nama ATM</th>
        <th>Nama Bank</th>
        <th>Kategori ATM</th>
        <th>Minimal Transaksi</th>
        <th>Lokasi ATM</th>
        <th>User</th>
        <th>Status</th>
        <th>Pilihan</th>
      </tr>

    <% @atms.each do |atm| %>
      <tr id="atm_<%= atm.id.to_s %>">
        <td><%= atm.nama_atm rescue "-" %></td>
        <td><%= atm.bank.nama_bank rescue "-" %></td>
        <td><%= atm.kategori_atm.nama_kategori rescue "-" %></td>
        <td><%= atm.min_transaksi.nominal rescue "-" %></td>
        <td><%= atm.lokasi_atm.nama_lokasi rescue "-" %></td>
        <td><%= atm.user.nama_lengkap rescue "-" %></td>
        <td><span class="<%= (atm.is_approved == true) ? raw('label label-success') : raw('label label-important') %>"><%= (atm.is_approved == true) ? raw("Approved") : raw("Not-Approved") %></span></td>
        <td>
          <%#= link_to 'Lihat', atm, class: "btn btn-mini btn-info" %>
          <%= link_to 'Edit', edit_atm_user_atm_path(atm), class: "btn btn-mini btn-primary" %>
          <%= link_to 'Delete', atm, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger" %>
        </td>
      </tr>
    <% end %>
    </table>

    <%= link_to '+ Tambah', new_atm_user_atms_path, class: "btn btn-primary" %>
    <%= link_to "Kembali", home_path, class: "btn" %>
  </div>
</div>